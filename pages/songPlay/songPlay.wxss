@keyframes rotates{
    0%{
        transform: rotate(0);
    }
    50%{
        transform: rotate(-180deg);
    }
    100%{
        transform: rotate(-360deg);
    }
}
.box{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    bottom: 0;
    background: linear-gradient(to bottom, #000000 0%,#2A2623 50%);
    background: linear-gradient(to bottom, #2A2623 50%,#171B1E 100%);
}
.margin-box{
    width: 96%;
    height: 100%;
    position: absolute;
    top: 0;
    bottom: 0;
    margin-left: 2%;
}
.songName{
    font-size: 32rpx;
    color: #fff;
    font-weight: 555;
}
.play{
    width: 500rpx;
    height: 500rpx;
    margin: 200rpx auto;
}
.play image{
    animation: rotates 10s linear infinite;
    width: 500rpx;
    height: 500rpx;
    border-radius: 250rpx;
}
.menu{
    display: flex;
    justify-content: space-around;
    height: 130rpx;
}
.menu image{
    width: 60rpx;
    height: 60rpx;
    margin-top: 35rpx;
}
.menu .plays image{
    width: 130rpx;
    height: 130rpx;
    margin-top: 0;
} 
.menu .pause image{
    width: 130rpx;
    height: 130rpx;
    margin-top: 0;
}
