.header{
width: 100%;
}
.roll{
width: 100%;
display: flex;
flex: 1;
white-space: nowrap; 

}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
.roll .item{
    display: inline-block;
    width: 160rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
    font-weight: 500;
    color: #6A6A6A;
}
.roll .item .name{
    width: 140rpx; 
    margin-left: 10rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    overflow: hidden;/*超出部分隐藏*/
    text-overflow:ellipsis;/* 超出部分显示省略号 */
    white-space: nowrap;/*规定段落中的文本不进行换行 */
}
.roll .item .line{
    width: 160rpx;
    height:4rpx;
    background: #f46;
}
.roll1{
    width: 100%;
    display: flex;
    flex: 1;
    white-space: nowrap;   
}
.item1{
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    white-space: nowrap; 
    display: inline-block;
}
.colors{
    color: #f46;
}
.artist{
    width: 100%;
    height: 100rpx;
    margin-top: 20rpx;
    margin-bottom: 2rpx solid #efefee;
}
.artistMsg{
    display: flex;
    justify-content: flex-start;
}

.artist .arTimg image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
}
.artist  .artName{
    height: 100rpx;
    line-height: 100rpx;
   font-size: 30rpx;
   color: #5B5B5B;
