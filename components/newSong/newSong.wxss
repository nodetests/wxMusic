.time{
    color: #ccc;
    font-size: 20rpx;
}
.tag{
    display: flex;
    justify-content: space-between;
}
.switch{
    display: flex;
    justify-content: flex-start;
    color: #A1A1A1;
    font-size: 32rpx;   
}
.more view{
  width: 120rpx;
  height: 40rpx;
  border: 2rpx solid #666;
  border-radius: 15rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 40rpx;
 color: #666;
}
.switchActive{
    color: #353535;
}
.switch .line{
    width: 4rpx;
    height: 40rpx;
    background: #A1A1A1;
    margin: 0 15rpx 0 15rpx;  
}

.newsong{
    width: 100%;
}
.newsong .item{
    width: 100%;
    height: 170rpx;
    display: flex;
    justify-content: flex-start;
    margin-top: 20rpx;
}
.newsong .item image{
    width: 170rpx;
    height: 170rpx;
    border-radius: 15rpx;
}
.newsong .item .play image{
    width: 70rpx;
    height: 70rpx;
}

/* 左侧图片所在区域 */
.newsong .item .img{
    width: 170rpx;
    height: 170rpx;
}
/* 中间文字所在区域 */
.newsong .item .song{
    width: 400rpx;
    height: 170rpx;
    margin-left: 20rpx;
}
.newsong .item .song .artist{
    height: 100rpx;
    overflow: hidden;
	text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 30rpx;
    color: #454545;
}
.newsong .item .song .introduce{
    height: 70rpx;
    font-size: 26rpx;
    color: #A1A1A1;
}
/* 右侧播放 */
.newsong .item .play{
    margin-left: 20rpx;
}
