<view class="box" >
    <view class="margin-box" >
         <view class="item" wx:for="{{comments}}" wx:key="index">
             <view class="img">
                 <image class="" src="{{item.userProfile.avatarUrl}}" ></image>
             </view>
             <view class="msg" >
                <view class="nickname" >
                    {{item.userProfile.nickname}}
                </view>
                 <view class="programName" >
                    {{item.programName}}
                </view>
                 <view class="content" >
                    {{item.content}}
                </view>
             </view>
         </view>
    </view>
</view>
