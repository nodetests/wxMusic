.recommendx{
 margin-top: 20rpx;   
}
.header{
    width: 100%;
    height: 100%;
 }
 .headerT{
     font-size: 26rpx;
     color: #666;
 }
 .headerB{
     width: 100%;
     height: 40rpx;
     display: flex;
     justify-content: space-between;
     margin-top: 5rpx;
 }
 .headerB .headerLeftText{
     font-size: 30rpx;
     font-weight: 700;
     color: #353535;
     line-height: 40rpx;
 }
 .headerB .headerRightText{
   width: 150rpx;
   height: 40rpx; 
   font-size: 24rpx;
   line-height: 40rpx;
   text-align: center;
   border: 1px solid #666;
   color: #666;
   border-radius: 15rpx;
 }
 .msg{
     width: 100%;
     margin-top: 20rpx;
 }
 .msg .scroll-x{
     width: 100%;
     display: flex;
     flex: 1;
     white-space: nowrap; 
 }   
 .msg .scroll-x .item{
   width: 270rpx;    
   display: inline-block;
   margin-left: 15rpx;
   overflow: hidden;
 }
 .msg .scroll-x .item:nth-child(1){
     margin-left: 0;
 }
 .msg .scroll-x .img{
     width: 270rpx;
     height: 400rpx;
     vertical-align: top; 
 }
 .msg .scroll-x image{
     width: 270rpx;
     height: 270rpx;
 }
 .msg .scroll-x .item .name{
     width: 270rpx;
     font-size: 26rpx;
     color: #353535;
     white-space: normal;
 }
 