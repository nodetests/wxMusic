.newHotSong{
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
}
.newHot{
    color: #535353;
    font-size: 32rpx;
    font-weight: 550;
}
.more{
    width: 130rpx;
    height:35rpx ;
    border: 2rpx solid #787878;
    border-radius: 15rpx;
    font-size: 27rpx;
    color: #787878;
    text-align: center;
}
.newsong{
    width: 100%;
}
.newsong .item{
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: space-around;
    margin-top: 20rpx;
}
.newsong .item image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 15rpx;
}
.newsong .item .play image{
    width: 50rpx;
    height: 50rpx;
}

/* 左侧图片所在区域 */
.newsong .item .img{
    width: 100rpx;
    height: 100rpx;
}
/* 中间文字所在区域 */
.newsong .item .song{
    width: 400rpx;
    height: 100rpx;
    margin-left: 20rpx;
}
.newsong .item .song .artist{
    height: 100rpx;
    overflow: hidden;
	text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 30rpx;
    color: #454545;
    position: relative;
}
.newsong .item .song .artistName{
    height: 50rpx;
}
.newsong .item .song .introduce{
    height: 50rpx;
    line-height: 50rpx;
    font-size: 26rpx;
    color: #A1A1A1;
}
/* 右侧播放 */
.newsong .item .play{
    margin-right: 20rpx;
}
.Introce{
  color: #A1A1A1; 
  font-size: 24rpx;     
}