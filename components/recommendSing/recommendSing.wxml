<view class="box" >
   <view class="recommendx margin-box" >
            <view class="header" >
                <view class="headerT" > 为你推荐</view>
                <view class="headerB">
                    <view class="headerLeftText" >为你精挑细选</view>
                    <view class="" >
                        <view class="headerRightText" bind:tap="more">查看更多 </view>
                    </view>  
                </view>
            </view>
            <view class="msg" >
                <scroll-view class="scroll-x" scroll-x="true">
                    <view class="item"  wx:for="{{hotRecommend}}" wx:key="index" >
                        <view class="img">
                            <image class="coverImgUrl" src="{{item.picUrl}}" > </image> 
                            <view class="name">{{item.name}}</view>     
                        </view>          
                    </view>       
               </scroll-view>
            </view>
   </view>
</view>
